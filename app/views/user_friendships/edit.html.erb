<div class="page-header">
  <h1>View Friendship</h1>
</div>

<div class="row">
  <div class="avatar col-md-2">
    <%= image_tag @user_friendship.user.gravatar_url %><br />
    <%= @user_friendship.user.first_name %>
  </div>
  <div class="avatar col-md-2">
    <%= image_tag @user_friendship.friend.gravatar_url %><br />
    <%= @user_friendship.friend.first_name %>
  </div>
</div>
 <hr />


<h3><%= @user_friendship.sub_message %></h3>

<div class="form-actions">
  <% if @user_friendship.requested? %>
    <%= form_for @user_friendship, url: accept_user_friendship_path(@user_friendship), method: :put do |f| %>
      <%= submit_tag "Accept Friendship", class: 'btn btn-primary' %>
    <% end %>

    <%= form_for @user_friendship, url: block_user_friendship_path(@user_friendship), method: :put do |f| %>
      <%= submit_tag "Block Friendship", class: 'btn btn-danger' %>
    <% end %>


  <% end %>

    <%= form_for @user_friendship, url: user_friendship_path(@user_friendship), method: :delete do |f| %>
      <%= submit_tag "Delete Friendship", class: 'btn btn-danger' %>
    <% end %>
</div>
