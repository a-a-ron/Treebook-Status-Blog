
<div class="row"><br /><br />
  <div class="col-md-4">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well"}) do |f| %>
    
    <fieldset>
      <legend><h2>Sign In</h2></legend>
      <%= f.input :email %><br />
      <%= f.input :password %><br />

      <% if devise_mapping.rememberable? -%>
        <div><%= f.input :remember_me, as: :boolean %></div><br />
      <% end -%>

      <div><%= f.button :submit, "Sign in", :class => "btn btn-info" %></div>
    </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-8">
    <h2>Signing in is easy and secure.</h2>
  </div>
</div>